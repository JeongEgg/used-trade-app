<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경색 설정 -->
    <solid android:color="#F5F5F5" /> <!-- 원하는 배경색으로 변경 -->

    <!-- 테두리 설정 (선택사항) -->
    <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- 원하는 테두리 색상으로 변경 -->

    <!-- 모서리 라운드 설정 -->
    <corners android:radius="8dp" /> <!-- 원하는 라운드 크기 -->

    <!-- 내부 여백 설정 (선택사항) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>